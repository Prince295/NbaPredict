#:kivy 1.10.0
<Root>:
    canvas:
        Color:
            rgba: 0.93, 0.91, 0.89, 1
        Rectangle:
            pos: self.pos
            size: self.size
    Label:

        color: 0.92, 0.56, 0.14, 1
        font_size: 70
        center_x: root.width / 4
        top: root.top - 50
        text: "0"

    Label:
        font_size: 70
        center_x: root.width * 3 / 4
        top: root.top - 50
        text: "0"
    Button:
        background_normal: ''
        background_color: 0.92, 0.56, 0.14, 1
        background_down: 'atlas://data/images/theme-basketball/bubble_btn'
        text: "Hello,world"